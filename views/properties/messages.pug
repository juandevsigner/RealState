extends ../layout/admin

block content
    h2(class="text-2xl font-bold text-center my-10")=page

    div(class="mx-auto max-w-6xl bg-white shadow")
        if messages.length
            ul 
                each message in messages
                    li(class="border-gray-200 border-b p-5")
                        p(class="font-bold text-gray-800") Name:   
                            span(class="font-normal")= message.user.name

                        p(class="font-bold text-gray-800") Email:   
                            span(class="font-normal")= message.user.email
                            
                        p(class="font-bold text-gray-800") Message:    
                            span(class="font-normal")= message.message

                        p(class="font-bold text-gray-800") Sent to:    
                            span(class="font-normal")=dateFormatter(message.createdAt) 
        else
            p(class="p-5 text-center") You don't have message yet!
    
    div(class="flex justify-center")
        a(href="/properties" class="rounded-sm py-2 px-8 bg-indigo-600 text-white hover:bg-indigo-700 transition-all ease-in-out text-sm inline-block w-full md:w-auto font-semibold capitalize my-5") Return to properties
