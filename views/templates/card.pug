div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${property.image}` alt=`${property.title}`)
    div(class="p-5 space-y-2")
        h3(class="text-2xl")=property.title
        p(class="text-sm text-gray-600") Rooms: 
            spam(class="text-gray-800 font-bold")=property.rooms
        p(class="text-sm text-gray-600") WC: 
            spam(class="text-gray-800 font-bold")=property.wc
        p(class="text-sm text-gray-600") Parking: 
            spam(class="text-gray-800 font-bold")=property.parking
        p(class="text-sm text-gray-600") Price: 
            spam(class="text-gray-800 font-bold")=property.price.name
        a(href=`/property/${property.id}` class="bg-indigo-600 w-full text-center font-bold block p-2 uppercase text-white rounded") Show Property