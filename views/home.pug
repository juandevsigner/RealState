extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content
    div(class="py-2")
        h1(class="text-center text-4xl font-extrabold") Location on Map
        div(class="flex flex-col md:flex-row items-center py-10 gap-4 justify-center")
            h2(class=" capitalize text-gray-800 font-bold text-lg") Properties Filter:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categories" class=" w-24 capitalize text-gray-500 text-lg") Categories
                select(id="categories" class="w-full flex-1 bg-white px-3 py-2 border border-gray-300 rounded shadow")
                    option(value="") - Choose an Option -
                    each category in categories
                        option(value=category.id)=category.name

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="prices" class=" w-24 capitalize text-gray-500 text-lg") Prices
                select(id="prices" class="w-full flex-1 bg-white px-3 py-2 border border-gray-300 rounded shadow")
                    option(value="") - Choose an Option -
                    each price in prices
                        option(value=price.id)=price.name

        div(id="map-home" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-bold pt-10") Homes for Sale

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each property in homes
                   include ./templates/card


        section(class="py-5")
            h2(class="text-center text-4xl font-bold pt-10") Department for Sale

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each property in departments
                    include ./templates/card

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/homeMap.js")